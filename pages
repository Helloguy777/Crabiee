<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Proxy Browser</title>
  <link rel="stylesheet" href="/styles/style.css" />
</head>
<body>
  <div id="app">
    <header>
      <form id="search-form" onsubmit="handleSearch(event)">
        <input type="text" id="search-input" placeholder="Search URL" />
        <button type="submit"><img src="/icons/search.svg" alt="Search" /></button>
      </form>
    </header>
    <iframe id="proxy-frame" src="" style="border: none; width: 100%; height: 100%;"></iframe>
  </div>

  <script>
    function handleSearch(event) {
      event.preventDefault();
      const query = document.getElementById('search-input').value;
      if (!query) return;
      
      
      const proxyUrl = `/proxy?url=${encodeURIComponent(query)}`;

      
      document.getElementById('proxy-frame').src = proxyUrl;
    }
  </script>
</body>
</html>